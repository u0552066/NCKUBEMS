                            android:layout_height="wrap_content"
                            android:layout_weight="0.08"
                            android:text="V"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="17sp" />
                    </LinearLayout>
                    <LinearLayout
